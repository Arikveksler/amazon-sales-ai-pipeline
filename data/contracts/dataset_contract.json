      "product_name",
      "category",
      "discounted_price",
      "actual_price",
      "discount_percentage",
      "rating",
      "rating_count",
      "about_product",
      "user_id",
      "user_name",
      "review_id",
      "review_title",
      "review_content",
      "img_link",
      "product_link"
    ],
    "dtypes": {
      "product_id": "object",
      "product_name": "object",
      "category": "object",
      "discounted_price": "float64",
      "actual_price": "float64",
      "discount_percentage": "float64",
      "rating": "float64",
      "rating_count": "float64",
      "about_product": "object",
      "user_id": "object",
      "user_name": "object",
      "review_id": "object",
      "review_title": "object",
      "review_content": "object",
      "img_link": "object",
      "product_link": "object"
    },
