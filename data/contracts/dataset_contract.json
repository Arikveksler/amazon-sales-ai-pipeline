  "constraints": {
    "discounted_price": {
      "type": "numeric",
      "min": 0.01,
      "max": null,
      "nullable": false,
      "description": "Sale price must be positive"
    },
    "actual_price": {
      "type": "numeric",
      "min": 0.01,
      "max": null,
      "nullable": false,
      "description": "Original price must be positive"
    },
    "rating": {
      "type": "numeric",
      "min": 0.0,
      "max": 5.0,
      "nullable": false,
      "description": "Star rating between 0 and 5"
    },
    "rating_count": {
      "type": "numeric",
      "min": 0,
      "max": null,
      "nullable": false,
      "description": "Number of ratings, non-negative"
    },
    "discount_percentage": {
      "type": "numeric",
      "min": 0,
      "max": 100,
      "nullable": false,
      "description": "Discount percentage between 0 and 100"
    }
  },

  "allowed_values": {
    "main_categories": [
      "Car&Motorbike",
      "Computers&Accessories",
      "Electronics",
      "Health&PersonalCare",
      "Home&Kitchen",
      "HomeImprovement",
      "MusicalInstruments",
      "OfficeProducts",
      "Toys&Games"
    ]
  },

  "assumptions": {
    "data_source": "Amazon India product listings",
    "currency": "INR (Indian Rupees)",
    "price_format": "Raw prices contain currency symbol (â‚¹) and commas",
    "rating_scale": "0-5 stars with decimal precision",
    "category_delimiter": "Pipe character (|) separates category hierarchy",
    "missing_values": "Rows with nulls in required columns should be removed",
    "duplicates": "Product IDs may appear multiple times (multiple reviews per product)"
  },

  "quality_checks": {
    "no_nulls_in_required": true,
    "valid_price_relationship": "discounted_price <= actual_price",
    "valid_rating_range": "0 <= rating <= 5",
    "positive_prices": true
  }
